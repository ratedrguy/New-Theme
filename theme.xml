<theme>
	<formatVersion>4</formatVersion>
	<include>./carousel_legacy.xml</include>

	<view name="system">
	
	</view>

	<view name="basic, detailed, video">
	
		<image name="background" extra="true">
			<size>0 1</size>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<path>./$system/data/bg.jpg</path>
		</image>
		<image name="logo">
			<path>./$system/data/logo.png</path>
		</image> 
		<text name="logoText">
			<color>000000</color>
		</text>
		<helpsystem name="help">
			<fontPath>./data/arts/steelfishrg.ttf</fontPath>
			<fontSize>0.035</fontSize>
			<textColor>FFFFFF50</textColor>
			<iconColor>FFFFFF50</iconColor>
		</helpsystem>
		
		</view>	
		
	<view name="basic, detailed">
		<image name="logo">
			<pos>0.5 0.127</pos>
			<maxSize>0.41 0.1</maxSize>
			<origin>0.5 1</origin>
		</image>
		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.3 0.5</pos>
			<maxSize>0.65 0.65</maxSize>
		</image>
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_genre, md_lbl_players">
			<forceUppercase>1</forceUppercase>
			<fontPath>./data/arts/Exo2-BoldCondensed.otf</fontPath>
			<fontSize>0.02</fontSize>
			<size>0.144 0.02</size>
			<color>FFFFFF</color>
		</text>
		<text name="md_lbl_rating">
			<pos>0.025 0.89</pos>
		</text>
		<text name="md_players, md_genre">
			<size>0.14 0.02</size>
		</text>
		<text name="md_lbl_players">
			<pos>0.165 0.89</pos>
		</text>		
		<text name="md_players">
			<pos>0.21 0.891</pos>
		</text>
		<text name="md_lbl_releasedate">
			<pos>0.26 0.89</pos>
		</text>		
		<datetime name="md_releasedate">
			<pos>0.31 0.891</pos>			
		</datetime>			
		<text name="md_lbl_genre">
			<pos>0.4 0.89</pos>
		</text>		
		<text name="md_genre">
			<pos>0.435 0.891</pos>
		</text>
		<text name="md_genre, md_players">
			<forceUppercase>1</forceUppercase>
			<fontPath>./data/arts/Exo2-RegularCondensed.otf</fontPath>
			<fontSize>0.02</fontSize>
			<size>0.144 0.02</size>
			<color>FFFFFF</color>
		</text>
		<text name="md_description">
			<lineSpacing>1</lineSpacing>
			<pos>0.61 0.872</pos>
			<size>0.36 0.1</size>
			<fontSize>0.02</fontSize>
			<forceUppercase>1</forceUppercase>
			<fontPath>./data/arts/Exo2-SemiBoldCondensed.otf</fontPath>
			<fontSize>0.024</fontSize>
			<color>FFFFFF</color>
		</text>
		<datetime name="md_releasedate">
			<forceUppercase>1</forceUppercase>
			<fontPath>./data/arts/Exo2-RegularCondensed.otf</fontPath>
			<fontSize>0.02</fontSize>
			<size>0 0.02</size>
			<color>FFFFFF</color>
		</datetime>
		<rating name="md_rating">
			<pos>0.065 0.89</pos>
			<filledPath>./../arts/rating_filled.svg</filledPath>
			<unfilledPath>./../arts/rating_empty.svg</unfilledPath>
			<size>0.032 0.02</size>
			<filledPath>./$system/data/icon_filled.svg</filledPath>
			<unfilledPath>./$system/data/icon_empty.svg</unfilledPath>
		</rating>
		<textlist name="gamelist">
			<pos>0.61 0.18</pos>
			<size>0.36 0.65</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<fontPath>./data/arts/Exo2-BoldCondensed.otf</fontPath>
			<fontSize>0.025</fontSize>
			<forceUppercase>1</forceUppercase>
			<selectorColor>00000090</selectorColor>
			<selectedColor>FFFFFF</selectedColor>
			<primaryColor>FFFFFF75</primaryColor>
			<secondaryColor>FFFFFF75</secondaryColor>
		</textlist>
	</view>
</theme>